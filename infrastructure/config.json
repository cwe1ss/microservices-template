{
  "location": "westeurope",
  "platformResourcePrefix": "lab-msa",

  "services": {
    "internal-http-bus": {
      "appType": "http",
      "sqlDatabaseEnabled": false
    },
    "customers": {
      "appType": "grpc",
      "sqlDatabaseEnabled": true
    },
    "orders": {
      "appType": "grpc",
      "sqlDatabaseEnabled": false
    }
  },

  "environments": {
    "development": {
      "environmentResourcePrefix": "lab-msa-dev",
      "vnetAddressPrefix": "10.130.0.0/16",
      "appsSubnetAddressPrefix": "10.130.0.0/21",

      "services": {
        "internal-http-bus": {
          "app": {
            "cpu": "0.5",
            "memory": "1.0Gi",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        },
        "customers": {
          "app": {
            "cpu": "0.5",
            "memory": "1.0Gi",
            "minReplicas": 0,
            "maxReplicas": 2
          },
          "sqlDatabase": {
            "skuName": "Basic",
            "skuTier": "Basic",
            "skuCapacity": 5
          }
        },
        "orders": {
          "app": {
            "cpu": "0.5",
            "memory": "1.0Gi",
            "minReplicas": 0,
            "maxReplicas": 2
          }
        }
      }
    },
    "production": {
      "environmentResourcePrefix": "lab-msa-prod"
    }
  }
}
